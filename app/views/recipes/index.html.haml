%h1 Listing recipes

%table
  %thead
    %tr
      %th Title
      %th Content
      %th User
      %th Image
      %th
      %th
      %th

  %tbody
    - @recipes.each do |recipe|
      %tr
        %td= recipe.title
        %td= recipe.content
        %td= recipe.user_id
        %td= recipe.image
        %td= link_to 'Show', recipe
        %td= link_to 'Edit', edit_recipe_path(recipe)
        %td= link_to 'Destroy', recipe, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Recipe', new_recipe_path
